import java.util.ArrayList;

public class MainCharacter {
	int attackDamage, abilityPower, hp, money, defense;
	boolean isAlive = true;
	ArrayList<Item> inventory = new ArrayList<Item>();
	
	public MainCharacter(int ad, int ap, int hp, int money) {
		attackDamage = ad;
		abilityPower = ap;
		this.hp = hp;
	}
	
	public void attackAD(Enemy e) {
		e.takeADDamage(attackDamage);
	}
	
	public void attackAP(Enemy e) {
		e.takeAPDamage(abilityPower);
	}
	
	public void setDefense(int def) {
		this.defense = def;
	}
	
	public int calculateTotalAD() {
		int total = 0;
		
		for(int i = 0; i < inventory.size(); i ++) {
			total += inventory.get(i).getAD();
		}
		
		return total;
	}
	
	public int calculateTotalAP() {
		int total = 0;
		
		for(int i = 0; i < inventory.size(); i ++) {
			total += inventory.get(i).getAP();
		}
		
		return total;
	}
	
	public int calculateTotalHP() {
		int total = 0;
		
		return total;
	}
	
	public void takeDamage(int damage) {
		hp = hp - damage;
		
		if(hp <= 0) {
			die();
		}
	}

	public void die() {
		isAlive = false;
	}
}
