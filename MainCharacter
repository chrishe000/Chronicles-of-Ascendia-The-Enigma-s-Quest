// Date: 6/4/2023

import java.util.ArrayList;

public class MainCharacter {
	private int attackDamage, abilityPower, hp, money, defense, mana, progress;
	boolean isAlive = true;
	ArrayList<Item> inventory = new ArrayList<Item>();
	ArrayList<Integer> statstoremove = new ArrayList<Integer>();
	boolean isBuffed = false;
	
	public MainCharacter(int ad, int ap, int hp, int money, int mana, int progress) {
		attackDamage = ad;
		abilityPower = ap;
		this.hp = hp;
		this.mana = mana;
		this.progress = progress;
	}
	
	// attack
	public void attackAD(Enemy e) {
		e.takeADDamage(attackDamage);
		
		if(e.getHp() == 0 && isBuffed == true) {
			
			attackDamage -= statstoremove.get(0);
			abilityPower -= statstoremove.get(1);
			defense -= statstoremove.get(2);
			statstoremove.clear();
			isBuffed = false;

		}
	}
	
	public void attackAP(Enemy e) {
		e.takeAPDamage(abilityPower);
		
		if(e.getHp() == 0 && isBuffed == true) {
			
			attackDamage -= statstoremove.get(0);
			abilityPower -= statstoremove.get(1);
			defense -= statstoremove.get(2);
			statstoremove.clear();
			isBuffed = false;
		}
	}
	
	// defense
	public int getDefense() {
		return this.defense;
	}
	
	public void setDefense(int defense) {
		this.defense = defense;
	}
	
    // ability power
    public int getAbilityPower() {
        return abilityPower;
    }
    
    public void setAbilityPower(int abilityPower) {
        this.abilityPower = abilityPower;
    }
    
    // attack damage
    public int getAttackDamage() {
        return attackDamage;
    }
    
    public void setAttackDamage(int attackDamage) {
        this.attackDamage = attackDamage;
    }
	
	// money
	public int getMoney() {
		return this.money;
	}
	
	public void setMoney(int money) {
		this.money = money;
	}
	
	// mana
	public int getMana() {
		return mana;
	}
	
	public void setMana(int mana) {
		this.mana = mana;
	}
	
	// hp
	public int getHP() {
		return hp;
	}
	
	public void setHP(int hp) {
		this.hp = hp;
	}
	
	// stats
	public int calculateTotalAD() {
		int total = 0;
		
		return total;
	}
	
	public int calculateTotalAP() {
		int total = 0;
		
		return total;
	}
	
	public int calculateTotalHP() {
		int total = 0;
		
		return total;
	}
	
	// take damage
	public void takeDamage(int damage) {
		hp = hp - damage;
		
		if(hp <= 0) {
			die();
		}
	}
	
	// add item
	public void addItem(Item i) {
		inventory.add(i);
	}

	// end game
	public void die() {
		isAlive = false;
		progress  = 0;
	}
	
	
	public void useItem(Item item) {
		
		if(item.getUses() < 25) {
    		item.setUses(item.getUses() - 1);
    	}
		
		if(item.getUses() == 0) {
			
			inventory.remove(item);
		}
    	
    	hp += item.getHeal();
    	attackDamage += item.getBoostAD();
    	abilityPower += item.getBoostAP();
    	defense += item.getBoostDEF();
    	statstoremove.add(item.getBoostAD());
    	statstoremove.add(item.getBoostAP());
    	statstoremove.add(item.getBoostDEF());
    	
    	isBuffed = true;
    	
		
	}
}
