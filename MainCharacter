import java.util.ArrayList;

public class MainCharacter {
	private int attackDamage, abilityPower, hp, money, defense, mana;
	boolean isAlive = true;
	ArrayList<Item> inventory = new ArrayList<Item>();
	
	public MainCharacter(int ad, int ap, int hp, int money, int mana) {
		attackDamage = ad;
		abilityPower = ap;
		this.hp = hp;
		this.mana = mana;
	}
	
	// attack
	public void attackAD(Enemy e) {
		e.takeADDamage(attackDamage);
	}
	
	public void attackAP(Enemy e) {
		e.takeAPDamage(abilityPower);
	}
	
	// defense
	public int getDefense() {
		return this.defense;
	}
	
	public void setDefense(int defense) {
		this.defense = defense;
	}
	
    // ability power
    public int getAbilityPower() {
        return abilityPower;
    }
    
    public void setAbilityPower(int abilityPower) {
        this.abilityPower = abilityPower;
    }
    
    // attack damage
    public int getAttackDamage() {
        return attackDamage;
    }
    
    public void setAttackDamage(int attackDamage) {
        this.attackDamage = attackDamage;
    }
	
	// money
	public int getMoney() {
		return this.money;
	}
	
	public void setMoney(int money) {
		this.money = money;
	}
	
	// mana
	public int getMana() {
		return mana;
	}
	
	public void setMana(int mana) {
		this.mana = mana;
	}
	
	// hp
	public int getHP() {
		return hp;
	}
	
	public void setHP(int hp) {
		this.hp = hp;
	}
	
	// stats
	public int calculateTotalAD() {
		int total = 0;
		
		return total;
	}
	
	public int calculateTotalAP() {
		int total = 0;
		
		return total;
	}
	
	public int calculateTotalHP() {
		int total = 0;
		
		return total;
	}
	
	// take damage
	public void takeDamage(int damage) {
		hp = hp - damage;
		
		if(hp <= 0) {
			die();
		}
	}
	
	// add item
	public void addItem(Item i) {
		inventory.add(i);
	}

	// end game
	public void die() {
		isAlive = false;
	}
}
