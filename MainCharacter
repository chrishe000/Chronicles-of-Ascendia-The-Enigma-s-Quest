// Date: 6/4/2023

import java.util.ArrayList;

public class MainCharacter {
	private int attackDamage, abilityPower, hp, money, defense;
	boolean isAlive = true;
	ArrayList<Item> inventory = new ArrayList<Item>();
	
	public MainCharacter(int ad, int ap, int hp, int money) {
		attackDamage = ad;
		abilityPower = ap;
		this.hp = hp;
	}
	
	// attack
	public void attackAD(Enemy e) {
		e.takeADDamage(attackDamage);
	}
	
	public void attackAP(Enemy e) {
		e.takeADDamage(abilityPower);
	}
	
	// defense
	public int getDefense() {
		return this.defense;
	}
	
	public void setDefense(int defense) {
		this.defense = defense;
	}
	
    // ability power
    public int getAbilityPower() {
        return abilityPower;
    }
    
    public void setAP(int abilityPower) {
        this.abilityPower = abilityPower;
    }
    
    // attack damage
    public int getAttackDamage() {
        return attackDamage;
    }
    
    public void setAttackDamage(int attackDamage) {
        this.attackDamage = attackDamage;
    }
    
	
	// money
	public int getMoney() {
		return this.money;
	}
	
	public void setMoney(int money) {
		this.money = money;
	}
	
	// calculate and get stats
	public int calculateTotalAD() {
		int total = 0;
		
		for(int i = 0; i < inventory.size(); i ++) {
			total += inventory.get(i).getAD();
		}
		
		return total;
	}
	
	public int calculateTotalAP() {
		int total = 0;
		
		for(int i = 0; i < inventory.size(); i ++) {
			total += inventory.get(i).getAP();
		}
		
		return total;
	}
	
	public int calculateTotalHP() {
		int total = 0;
		
		return total;
	}
	
	// take damage
	public void takeDamage(int damage) {
		hp = hp - damage;
		
		if(hp <= 0) {
			die();
		}
	}
	
	// add item
	public void addItem(Item i) {
		inventory.add(i);
	}

	// end game
	public void die() {
		isAlive = false;
	}
}
