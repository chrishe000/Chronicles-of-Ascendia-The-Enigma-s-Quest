import java.util.ArrayList;
import java.lang.Math;

public class MainCharacter {
	private int attackDamage, abilityPower, hp, money, defense, mana, progress;
	private boolean isAlive = true;
	ArrayList<Item> inventory = new ArrayList<Item>();
	
	public MainCharacter(int ad, int ap, int hp, int money, int mana, int progress) {
		attackDamage = ad;
		abilityPower = ap;
		this.hp = hp;
		this.money = money;
		this.mana = mana;
		this.setProgress(progress);
	}
	
	// attack
	public void attackAD(Enemy e) {
		e.takeADDamage(attackDamage);
	}
	
	public void attackAP(Enemy e) {
		e.takeAPDamage(abilityPower);
	}
	
	// defense
	public int getDefense() {
		return this.defense;
	}
	
	public void setDefense(int defense) {
		this.defense = defense;
	}
	
    // ability power
    public int getAbilityPower() {
        return abilityPower;
    }
    
    public void setAbilityPower(int abilityPower) {
        this.abilityPower = abilityPower;
    }
    
    // attack damage
    public int getAttackDamage() {
        return attackDamage;
    }
    
    public void setAttackDamage(int attackDamage) {
        this.attackDamage = attackDamage;
    }
	
	// money
	public int getMoney() {
		return this.money;
	}
	
	public void setMoney(int money) {
		this.money = money;
	}
	
	// mana
	public int getMana() {
		return mana;
	}
	
	public void setMana(int mana) {
		this.mana = mana;
	}
	
	// hp
	public int getHP() {
		return hp;
	}
	
	public void setHP(int hp) {
		this.hp = hp;
	}
	
	// stats
	public int calculateTotalAD() {
		int total = 0;
		
		return total;
	}
	
	public int calculateTotalAP() {
		int total = 0;
		
		return total;
	}
	
	public int calculateTotalHP() {
		int total = 0;
		
		return total;
	}
	
	// add item
	public void addItem(Item i) {
		inventory.add(i);
	}

	// end game
	public void die() {
		setAlive(false);
		setProgress(0);
	}
	
	// run away
	public void retreat() {
		hp = Math.abs(defense - hp);
	}
	
	// use item
	public void useItem() {
		
	}

	/**
	 * @return the isAlive
	 */
	public boolean isAlive() {
		return isAlive;
	}

	/**
	 * @param isAlive the isAlive to set
	 */
	public void setAlive(boolean isAlive) {
		this.isAlive = isAlive;
	}

	/**
	 * @return the progress
	 */
	public int getProgress() {
		return progress;
	}

	/**
	 * @param progress the progress to set
	 */
	public void setProgress(int progress) {
		this.progress = progress;
	}
}
